{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "palette": {
        "white": "#FFFFFF",
        "os": "#ACB0BE",
        "pink": "#F5BDE6",
        "lavender": "#B7BDF8",
        "blue":  "#8AADF4",
        "wight": "#FFFFFF",
        "text": "#494D64",
        "teal_blue": "#33658A"
  },
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "background": "p:blue",
          "foreground": "p:wight",
          "powerline_symbol": "\ue0b4",
          "leading_diamond": "\ue0b6",
          "properties": {
            "macos": "mac"
          },
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} \ue0b1",
          "type": "os"
        },
        {
          "background": "p:blue",
          "foreground": "p:text",
          "powerline_symbol": "\ue0b4",
          "type": "session",
          "style": "diamond",
          "template": "{{ if .SSHSession }}î®© {{ end }}{{ .UserName }} "
        },
        {
          "type": "shell",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#0077c2",
          "template": " {{ .Name }} ",
          "properties": {
            "mapped_shell_names": {
              "pwsh": "PS"
            }
          }
        },
        {
          "type": "path",
          "style": "diamond",
          "powerline_symbol": "\ue0b0",
          "background": "p:pink",
          "foreground": "p:text",
          "template": " {{ .Path }} ",
          "properties": {
            "style": "full"
          }
        },
        {
          "background": "p:lavender",
          "foreground": "p:text",
          "type": "git",
          "style": "diamond",
          "powerline_symbol": "\ue0b0",
          "properties": {
              "branch_icon": "\ue725 ",
              "cherry_pick_icon": "\ue29b ",
              "commit_icon": "\uf417 ",
              "fetch_status": false,
              "fetch_upstream_icon": false,
              "merge_icon": "\ue727 ",
              "no_commits_icon": "\uf0c3 ",
              "rebase_icon": "\ue728 ",
              "revert_icon": "\uf0e2 ",
              "tag_icon": "\uf412 "
          },
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} "
        },
        {
          "background": "p:teal_blue",
          "foreground": "p:white",
          "type": "executiontime",
          "style": "diamond",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .FormattedMs }}",
          "trailing_diamond": "\ue0b4",
          "properties": {
            "always_enabled": true,
            "style": "austin",
            "threshold": 500
          }
        }
      ]
    }
  ]
}
